    }

  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": {

        "en": "Collection"
      },
      "settings": [
        {
          "label": {

            "en": "Collection"
          },
          "id": "collection",
          "type": "collection"
        },
		{
           "type": "image_picker",
           "id": "image",
           "label": "Image"
      	 },
		{
