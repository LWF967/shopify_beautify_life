          {% assign my_svg_height_centered = section.settings.logo_width | divided_by: section.settings.logo_svg.aspect_ratio | ceil | plus: 103 %}
          {% assign my_header_height = section.settings.header_height %}
          {% assign my_svg_url = section.settings.logo_svg %}
