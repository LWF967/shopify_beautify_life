          <span style="font-size: 9px;">{{ my_svg_height_left }}-{{ my_header_height }}-1+{{ my_svg_url.aspect_ratio }}</span>
          {% elsif my_svg_height_left == my_header_height %}
          <span style="font-size: 9px;">{{ my_svg_height_left }}-{{ my_header_height }}-2+{{ my_svg_url.aspect_ratio }}</span>
          {% else %}
          <span style="font-size: 9px;">{{ my_svg_height_left }}-{{ my_header_height }}-3+{{ my_svg_url.aspect_ratio }}</span>
          {% endif %}
    {%- if true -%}
      </h1>
    {%- endif -%}

