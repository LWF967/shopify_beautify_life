  .product__media-icon.motion-reduce.my_featured_product_beautify_media_big {
    height: 3rem;
    width: 3rem;
    left: 1.5rem;
    top: 1.5rem;
    opacity: 0;
  }
  
  .product__media-list deferred-media {
    display: block;
  }
  
  .my_featured_product_beautify_ul li deferred-media {
    display: none;
  }
  
  .my_featured_product_beautify_ul li modal-opener {
    display: block !important;
  }
  
  .my_featured_product_beautify_ul .my_featured_product_beautify_media {
    display: none !important;
  }
  
  .my_featured_product_beautify_add {
    font-size: 13px;
    min-height: 44px;
  }
  
  .my_featured_product_beautify_payment_button {
    width: 100%;
    height: 44px;
    line-height: 44px;
    min-height: 44px;
  }
  
  .button.my_featured_product_beautify_payment_button .shopify-payment-button {
    height: 44px;
    min-height: 44px;
  }
  
  .button.my_featured_product_beautify_payment_button .shopify-payment-button .shopify-payment-button__button {
    display: inline-block;
    background: var(--color-button);
    text-transform: uppercase;
    min-height: auto;
    font-weight: 700;
  }
  
  .h1.product__title.my_featured_product_beautify_title {
    font-size: 36px;
    margin-bottom: 30px;
  }
  
  .no-js-hidden.my_featured_product_beautify_price {
    margin: 10px 0 30px;
  }
  
  .my_featured_product_beautify_vendor {
    font-size: 18px;
  }
  
