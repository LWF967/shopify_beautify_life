{%- liquid
  assign section_blocks = section.blocks
    if section_blocks.size > 2
      assign class_1 = 'col-md-12 icon_flex icon_flex_l'
      assign class_2 = 'col-md-12 icon_flex icon_flex_c'
    else 
      assign class_1 = 'tl_lg col-md-12 icon_flex icon_flex_l'
      assign class_2 = 'col-md-12 icon_flex icon_flex_r'
    endif-%}
  
<div class="h__top bgbl pt__10 pb__10 fs__12 flex fl_center al_center my_center my_width">
  <div class="container my_container">
    <div class="row al_center my_layout">
      {%- for block in section_blocks -%}
        <div class="col-lg-{{block.settings.col}} col-12 tc {% cycle class_1, class_2, 'col-md-12 icon_flex icon_flex_r' %} dn_{{block.settings.hide}}_1024 my_flex 
                    {% if block.settings.col == '1' %}my_pc_adadpt_1
                    {% elsif block.settings.col == '2' %}my_pc_adadpt_2
                    {% elsif block.settings.col == '3' %}my_pc_adadpt_3
                    {% elsif block.settings.col == '4' %}my_pc_adadpt_4
                    {% elsif block.settings.col == '6' %}my_pc_adadpt_6
                    {% elsif block.settings.col == '7' %}my_pc_adadpt_7
                    {% elsif block.settings.col == '8' %}my_pc_adadpt_8
                    {% elsif block.settings.col == '9' %}my_pc_adadpt_9
                    {% elsif block.settings.col == '10' %}my_pc_adadpt_10
                    {% elsif block.settings.col == '11' %}my_pc_adadpt_11
                    {% else %}my_pc_adadpt_12
                    {% endif %}">
          {%- case block.type -%}
          {%- when 'cur' -%}
            {%- if block.settings.social_mode == '1' -%}
              {%- render 'my-social-sharing',class_tooltip:'ttip_nt tooltip_bottom_right' -%}
            {%- elsif block.settings.social_mode == '2' -%}
              {% if forloop.last %}
                {% assign class_tooltip = 'ttip_nt tooltip_bottom_left' %}
              {% else %}
                {% assign class_tooltip = 'ttip_nt tooltip_bottom_right' %}
              {% endif %}
              {%- render 'my-social-sharing',follow_social:true,class_tooltip:class_tooltip -%}
            {%- endif -%}
            {%- else -%}
           <div class="header-text">{{block.settings.text}}</div>
          {%- endcase -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{%- style -%}
.h__top {min-height:{{section.settings.height}}px;font-size:{{section.settings.fontsize}}px;}
{%- if settings.h_transparent and settings.header_design != '7' and settings.h_tr_top and template.name == 'index' -%}
{%- assign bg_op = section.settings.bg_op_tr | divided_by: 100.0 -%}
.h__top,.h__top.bgbl { background-color: {{ section.settings.bg_tr | color_modify: 'alpha', bg_op }};
  {% if section.settings.show_border_tr %}
    border-bottom: 1px solid {{ section.settings.bd_cl_tr }};
  {% endif %};color:{{section.settings.cl_tr}} } 
.header-text >.cg,.h__top .nt_currency { color:{{section.settings.cl_tr}}  } 
.h__top .cr { color:{{section.settings.cl_cr_tr}}  } 
.header-text >a:not(.cg),.dark_mode_true 
.header-text>a:not(.cg) { color:{{section.settings.cl_a_tr}}  } 
{%- else -%}
{%- assign bg_op = section.settings.bg_op | divided_by: 100.0 -%}h__top,.h__top.bgbl { background-color: {{ section.settings.bg | color_modify: 'alpha', bg_op }};{% if section.settings.show_border %}border-bottom: 1px solid {{ section.settings.bd_cl }};{% endif %}color:{{section.settings.cl}} } .header-text >.cg,.h__top .nt_currency { color:{{section.settings.cl}}  } .h__top .cr { color:{{section.settings.cl_cr}}  } .header-text >a:not(.cg),.dark_mode_true .header-text>a:not(.cg) { color:{{section.settings.cl_a}}  } 
{%- endif -%}
<!-- .my_flex { flex: 0 0 { section.settings.blocks.settings.col };max-width: { section.settings.blocks.settings.col }; padding: 0 15px;} -->
{%- endstyle -%}

