        "min": 20,
        "max": 120,
        "step": 1,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "promo_bar_fontsize",
        "label": "Font size",
        "default": 12,
        "min": 12,
        "max": 18,
        "step": 0.5,
        "unit": "px"
      },
      {
        "type": "color",
        "id": "promo_bar_cl",
        "label": "Text Color",
        "default": "#fff"
