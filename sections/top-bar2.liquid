{%- liquid
  assign section_blocks = section.blocks
  if section_blocks.size > 2
    assign class_1 = 'tl_lg col-md-12'
    assign class_2 = 'col-md-12'
  else
    assign class_1 = 'tl_lg col-md-12'
    assign class_2 = 'col-md-12 tr_lg'
  endif -%}
  
<div class="h__top bgbl pt__10 pb__10 fs__12 flex fl_center al_center my_center">
  <div class="container my_width">
   <div class="row al_center my_layout">
      {%- for block in section_blocks -%}
     	<div class="col-lg-{{block.settings.col}} col-12 tc {% cycle class_1, class_2, 'col-md-12 tr_lg' %} dn_{{block.settings.hide}}_1024 my_flex">
        {%- case block.type -%}
          {%- when 'social' -%}
            {%- if block.settings.social == '1' -%}{%- render 'my-social-sharing',class_tooltip:'ttip_nt tooltip_bottom_right' -%}
            {%- elsif block.settings.social == '2' -%}{% if forloop.last %}{% assign class_tooltip = 'ttip_nt tooltip_bottom_left' %}{% else %}{% assign class_tooltip = 'ttip_nt tooltip_bottom_right' %}{% endif %}{%- render 'social-sharing',follow_social:true,class_tooltip:class_tooltip -%}{%- endif -%}
          {%- else -%}
     	  <div class="header-text">{{block.settings.text}}</div>
        {%- endcase -%}
      	</div>
      {%- endfor -%}
      
      <ul class="list-social_start list-unstyled" role="list">
        {%- if settings.social_twitter_link != blank -%}
          <li class="list-social__item">
            <a href="{{ settings.social_twitter_link }}" class="link link--text list-social__link my_svg" aria-describedby="a11y-external-message">
              {%- render 'icon-twitter' -%}
              <span class="visually-hidden">{{ 'general.social.links.twitter' | t }}</span>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_facebook_link != blank -%}
          <li class="list-social__item">
            <a href="{{ settings.social_facebook_link }}" class="link link--text list-social__link my_svg" aria-describedby="a11y-external-message">
              {%- render 'icon-facebook' -%}
              <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_instagram_link != blank -%}
          <li class="list-social__item">
            <a href="{{ settings.social_instagram_link }}" class="link link--text list-social__link my_svg" aria-describedby="a11y-external-message">
              {%- render 'icon-instagram' -%}
              <span class="visually-hidden">{{ 'general.social.links.instagram' | t }}</span>
            </a>
          </li>
        {%- endif -%}
        {%- if settings.social_tumblr_link != blank -%}
          <li class="list-social__item">
            <a href="{{ settings.social_tumblr_link }}" class="link link--text list-social__link my_svg" aria-describedby="a11y-external-message">
              {%- render 'icon-tumblr' -%}
              <span class="visually-hidden">{{ 'general.social.links.tumblr' | t }}</span>
            </a>
          </li>
        {%- endif -%}
      </ul>
		
    </div>
  </div>
</div>

  {%- style -%}.h__top {min-height:{{section.settings.height}}px;font-size:{{section.settings.fontsize}}px;}
  {%- if settings.h_transparent and settings.header_design != '7' and settings.h_tr_top and template.name == 'index' -%}
  {%- assign bg_op = section.settings.bg_op_tr | divided_by: 100.0 -%}.h__top,.h__top.bgbl { background-color: {{ section.settings.bg_tr | color_modify: 'alpha', bg_op }};{% if section.settings.show_border_tr %}border-bottom: 1px solid {{ section.settings.bd_cl_tr }};{% endif %};color:{{section.settings.cl_tr}} } .header-text >.cg,.h__top .nt_currency { color:{{section.settings.cl_tr}}  } .h__top .cr { color:{{section.settings.cl_cr_tr}}  } .header-text >a:not(.cg),.dark_mode_true .header-text>a:not(.cg) { color:{{section.settings.cl_a_tr}}  } 
  {%- else -%}
  {%- assign bg_op = section.settings.bg_op | divided_by: 100.0 -%}h__top,.h__top.bgbl { {%-if section.settings.color_scheme =="bg"-%} background-color:{{section.settings.bg | color_modify: 'alpha', bg_op}}{%-else-%} background-color:{{settings.color_page_background | color_modify: 'alpha', bg_op}};{%-endif-%}{% if section.settings.show_border %}border-bottom: 1px solid {{ section.settings.bd_cl }};{% endif %}color:{{section.settings.cl}} } .header-text >.cg,.h__top .nt_currency { color:{{section.settings.cl}}  } .h__top .cr { color:{{section.settings.cl_cr}}  } .header-text >a:not(.cg),.dark_mode_true .header-text>a:not(.cg) { color:{{section.settings.cl_a}}  } 
  {%- endif -%}{%- endstyle -%}

<style>
  .my_center {
    display: flex;
    justify-content: space-around;
    align-items: center; 
  }
  .my_width {
  	width: 100%;
    padding: 10px 0;
  }
  .my_layout {
    display: flex;
    align-items: center; 
/*     justify-content: space-between; */
    text-align: center;
  }
  .my_flex {
  	flex: 0 0 33.333333%;
  }
  .my_svg {
	padding: 0 9px !important;
    color: #797979;
  }
</style>
