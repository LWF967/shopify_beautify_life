<style>
  .my_main_product_add {
    font-size: 13px;
    min-height: 44px;
  }
  .my_main_product_bread_item_Home{
    color:{{settings.colors_heading_text}}
  }
  .my_main_product_title {
    font-size: 36px;
    margin-bottom: 15px;
  }
  
  .my_main_product_vendor {
    font-size: 18px;
    margin-bottom: 10px;
  }
  
  .my_main_product_ul {
    width: 100%;
    margin-left: 0;
  }
  
  .my_main_product_noswiper li {
    flex: 1;
    padding: 15px 0 0 10px !important;
  }
  
  .my_main_product_noswiper li:first-child {
    padding: 15px 0 0 0 !important;
  }
  
  .my_main_product_noswiper li:last-child {
    padding: 15px 0 0 10px;
  }
  
  .my_main_product_ul li:last-child {
    margin-right: 0 !important;
  }
  
  .my_main_product_ul li modal-opener {
    width: 100%;
  }
  
  .product__media-icon.motion-reduce.my_featured_product_beautify_media_big {
    height: 3rem;
    width: 3rem;
    left: 1.5rem;
    top: 1.5rem;
    opacity: 0;
  }
  
  .product__media-list deferred-media {
    display: block;
  }
  
  .my_main_product_ul li deferred-media {
    display: none;
  }
  
  .my_main_product_ul li modal-opener {
    display: block !important;
  }
  
  .my_main_product_ul .my_featured_product_beautify_media {
    display: none !important;
  }
  
  .my_featured_product_beautify_add {
    font-size: 13px;
    min-height: 44px;
  }
  
  .select .icon.icon-caret {
    right: 2.8rem;
  }
  
  .my_main_product_addtocart {
    height: 4.4rem;
    padding: 0 6.6rem 0 1.6rem;
    font-size: 14px;
  }
  
  .link.product__view-details.animate-arrow.my_main_product_details {
    font-size: 16px;
    font-weight: 700;
    margin: 50px 0 0;
  }
  
  .my_main_product_left_content_small {
    max-width: 33.333333% !important;
    width: 33.333333% !important;
  }
  
  .my_main_product_left_content_medium {
    max-width: 50% !important;
    width: 50% !important;
  }
  
  .my_main_product_left_content_large {
    max-width: 66.666667% !important;
    width: 66.666667% !important;
  }
  
  .my_main_product_left_content_extra_large {
    max-width: 100% !important;
    width: 100% !important;
  }
  
  .my_main_product_right_content {
    {% if section.settings.main_product_mediasize == 'Small' %}
    max-width: 66.666667% !important;
    width: 66.666667% !important;
    {% elsif section.settings.main_product_mediasize == 'Medium' %}
    max-width: 50% !important;
    width: 50% !important;
    {% else %}
    max-width: none !important;
    width: auto !important;
    {% endif %}
  }
  
  .my_main_product_product_form_button {
    display: flex;
    {% if section.settings.main_product_mediasize == 'Large' %}
    max-width: 66.666667%;
    {% else %}
    max-width: 100%;
    {% endif %}
  }
  
  .my_main_product_add_button {
    margin-right: 10px;
    flex: 50%;
  }
  
  .my_main_product_paybutton_small_extralarge {
    flex: 50%;
    padding: 0 0;
    height: 44px;
    min-height: 44px;
    box-shadow: 0 0 0 0.1rem rgb(var(--color-button));
  }
  
  .my_main_product_paybutton_medium_large {
    padding: 0 0;
    width: 100%;
    height: 44px;
    min-height: 44px;
    box-shadow: 0 0 0 0.1rem rgb(var(--color-button));
  }
  
  .button.my_main_product_paybutton_small_extralarge .shopify-payment-button .shopify-payment-button__button,
  .button.my_main_product_paybutton_medium_large .shopify-payment-button .shopify-payment-button__button {
    font-weight: 700;
    color: var(--color-button-text);
    background-color: var(--color-button);
    text-transform: uppercase;
  }
  
  .my_main_product_right_content_no_padding {
    padding-left: 0 !important;
  }
  
  .my_main_product_nomargin {
    margin-top: 0;
  }
  
  .my_main_product_share_button {
    margin-bottom: 3.5rem;
  }

  .my_main_product_bread {
    display: flex;
    margin-bottom: 3rem;
  }

  .my_main_product_bread_item {
    position: relative;
    font-size: 16px;
  }

  .my_main_product_bread_item:not(:first-child) {
    margin-left: 1.2rem;
  }

  .my_main_product_bread_item svg {
    height: 0.4rem;
    left: 0;
    top: 1rem;
    vertical-align: middle;
    margin-right: 1rem;
    transform: rotate(-90deg);
  }
  
  .form__label.my_main_product_size {
    font-size: 15px;
    margin-bottom: 5px;
    color:var(--font-title-color);
  }
  
  .my_main_product_share_button {
    font-family: var(--font-body-family);
    font-style: var(--font-body-style);
  }
  
  .product__media-list.my_main_product_product_media_list .product__media-item.my_main_product_product_media_item:not(:first-child) {
    display: none;
  }
  
  @media screen and (max-width: 750px) {
    .h1.product__title.my_featured_product_beautify_title {
      font-size: 36px;
      margin-bottom: 30px;
    }
    .no-js-hidden.my_featured_product_beautify_price {
      margin: 10px 0 30px;
    }
    .select__select.my_featured_product_beautify_select {
      font-size: 14px;
      padding-left: 16px;
      height: 44px;
    }
    .no-js-hidden.my_featured_product_beautify_variant-selects {
      margin: 10px 0;
    }
    .product-form__input.product-form__quantity.my_featured_product_beautify_quantity {
      margin: 10px 0 15px;
    }
    .my_featured_product_beautify_add {
      font-size: 13px;
      min-height: 44px;
    }
    .product__description.rte.my_featured_product_beautify_description {
      margin: 50px 0 35px;
    }
    
    .my_main_product_left_content_mobile {
      max-width: 100% !important;
      width: 100% !important;
      padding: 0 0
    }
    
    .my_main_product_product_media_list {
      width: 100% !important;
      padding: 0 0 !important;
      margin: 0 0 !important;
    }
    
    .my_main_product_product_media_list .my_main_product_product_media_item {
      width: 100% !important;
    }
    
    .my_main_product_ul_nomargin {
      margin-bottom: 0 !important;
    }
    
    .my_main_product_right_content {
      max-width: 100% !important;
      width: 100% !important;
      margin-top: 55px;
    }
    
    .my_main_product_bread {
      display: flex;
      margin-bottom: 1.5rem;
    }
  }
  
  @media screen and (max-width: 990px) {
    .product__media-icon.motion-reduce.my_product_thumbnail_mobile_hidden {
      display: none;
    }
  }
</style>


{%- liquid 
    assign pid = product.id
    assign hd_up = 'group-' |append:pid
