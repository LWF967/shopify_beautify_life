	.card-wrapper:hover .list_test::before{
  
  z-index:1;
  }
  

  
  .list_test:focus {
    opacity: 1; }
  
  
  .list_test::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: var(--color-image-overlay);
  opacity: var(--opacity-image-overlay); }   
   

